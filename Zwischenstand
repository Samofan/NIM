namespace NIM
{
    class Program
    {
        

        static void Main(string[] args)
        {
            //player Strings
            String player1;
            String player2;

            //numbers
            int sticks;

            //open console and save names
            Console.WriteLine("NIM (press Enter)");
            Console.ReadLine();
            Console.Clear();

            Console.WriteLine("Wie heißt Spieler1?");
            player1 = Console.ReadLine();
            Console.Clear();
            Console.WriteLine("Wie heißt Spieler2?");
            player2 = Console.ReadLine();
            Console.Clear();
            Console.WriteLine("Hallo " + player1 + " und " + player2);

            //user manual
           // Console.WriteLine("Wisst Ihr, wie das Spiel funktioniert? (y/n)");
            //if (Console.ReadLine() == "y")
          //  {
          //      //do nothing
