           //     Console.WriteLine("Ungültige Eingabe");
            //  }
             Console.WriteLine("Alles klar. Auf gehts. Mit wie vielen Stöcken soll gespielt werden?");
             sticks = Convert.ToInt32(Console.ReadLine());

            //draw sticks
             drawSticks(sticks);
             Console.ReadLine();

             while (sticks > 0)
             {

             }

        }

        public static void showManual()
        {
            Console.WriteLine("Vor Euch liegen Stöcke. Von denen könnt Ihr jeweils ein oder zwei Stöcke ziehen. Wer den letzten Stock zieht hat verloren.");
            Console.ReadLine();
            Console.Clear();
        }

        public static void drawSticks(int sticks)
        {
            for (int i = 0; i < sticks; i++)
            {
                Console.Write("|");
            }
        }


    }
}
